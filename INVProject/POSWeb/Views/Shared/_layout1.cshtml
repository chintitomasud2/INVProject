<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>StoreAssistant | @ViewBag.Title</title>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
        {@RenderSection("Styles", required: false)}
     
    <!-- Add jQuery Style direct - used for jQGrid plugin -->
    @Styles.Render("~/Scripts/plugins/jquery-ui/jqueryuiStyles")

    <!-- Primary Inspinia style -->     
    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/plugins/markdownStyles")

    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
   
    <!-- Section for main scripts render -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/slimScroll")
    @Scripts.Render("~/bundles/inspinia")
    @Scripts.Render("~/plugins/markdown")

    @Scripts.Render("~/plugins/dataTables")
    
    @*<link href="~/Content/AdminLTE.css" rel="stylesheet" />*@
    <link href="~/Content/StyleFromAdminLite.css" rel="stylesheet" />
</head>
<body>

   
    <!-- Wrapper-->
    <!-- PageClass give you ability to specify custom style for specific view based on action -->
    <div id="wrapper" class="@Html.PageClass()">

        <!-- Navigation -->
        @Html.Partial("_Navigation")

        <!-- Page wraper -->
        <div id="page-wrapper" class="@ViewBag.SpecialClass" style="background-color:#bdc3c7;">

            <!-- Top Navbar -->
            @Html.Partial("_TopNavbar")
            @*@Html.Partial("_AdminLteTopMenu")*@
            
            <!-- Main view  -->
            <div style="margin-top:10px;">
                @RenderBody()
            </div>
                <!-- Footer -->
                @Html.Partial("_Footer")

</div>
        <!-- End page wrapper-->

        <!-- Right Sidebar -->
        @Html.Partial("_RightSidebar")

    </div>
    <!-- End wrapper-->


    <!-- Skin config script - only for demo purpose-->
    @Scripts.Render("~/bundles/skinConfig")
    <script src="~/Scripts/app/my.js"></script>
    <!-- Handler for local scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>
